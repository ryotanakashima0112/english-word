<div style="margin-top: 15px;">
  <h1>日本語→英単語モード</h1>
</div>

<%= link_to "ランダムに意味を表示させる", japanies_path, class: "btn btn-success" %>

<div style="margin-top: 15px;">
  <% if @meaning %>
    <div style="font-size: 30px;">
      英単語: <%= @meaning %>
    </div>
    <div style="padding-top: 10px;">
      <%= link_to "わからないボタン", mistake_japanies_path(@vocabulary, params: { vocabulary: { meaning: @meaning} }), class: "btn btn-danger", method: :post %>
    </div>
  <% end %>
</div>