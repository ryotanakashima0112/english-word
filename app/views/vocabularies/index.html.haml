    \&#x305D;&#x306E;&#x5358;&#x8A9E;&#x3092;&#x7DE8;&#x96C6;&#x3059;&#x308B;&#x5834;&#x5408;&#x306F;&#x3053;&#x3061;&#x3089; &#x2192; #{link_to 'Edit', edit_vocabulary_path(@result_vocabulary)}
